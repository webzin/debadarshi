<?xml version='1.0' encoding='utf-8'?>
<widget id="com.advuro.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Hello World</name>
    <description>
        Hello World sample application that responds to the deviceready event.
    </description>
    <icon src="icon.png" />
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <name>ADVURO</name>
    <description>
       Advanced Urocare Patient Record Management
    </description>
    <author email="sales@webzin.in" href="https://www.webzin.in">
        Webzin Team
    </author>
    <content src="index.html" />
    <splash src="splash.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="http://127.0.0.1*" />
    <access origin="http://advuro.wordpress-guru.net/" />
    <access origin="http://wordpress-guru.net/" subdomains="true" />
    <access origin="https://twitter.com" subdomains="true" />
    <access origin="https://facebook.com" subdomains="true" />
    <access origin="https://m.facebook.com" />
    <access origin="https://graph.facebook.com" />
    <access origin="https://api.facebook.com" />
    <access origin="*.fbcdn.net" />
    <access origin="*.akamaihd.net" />
    <access origin="https://twimg.com" subdomains="true" />
    <access origin="https://abs.twimg.com" />
    <access origin="*.twimg.com" />
    <access origin="https://google-analytics.com" subdomains="true" />
    <access origin="https://ssl.google-analytics.com" />
    <access origin="*.google-analytics.com" />
    <access subdomains="true" uri="*" />
    <access origin=".*" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="SplashScreenDelay" value="15000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-installLocation" value="auto" />
</widget>
